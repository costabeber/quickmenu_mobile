<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="179dp"
    tools:context=".main.MainActivity"
    android:background="@color/color_Primary">


    <ImageButton
        android:id="@+id/btn_sub_qtd"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/color_Primary"
        app:layout_constraintStart_toEndOf="@+id/imagem_Produto"
        app:layout_constraintTop_toBottomOf="@+id/quantidade"
        app:srcCompat="@drawable/ic_minus"
        android:contentDescription="Botao Menos"/>

    <TextView
        android:id="@+id/title_Itens"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="76dp"
        android:text="Itens"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/title_description"
        app:layout_constraintEnd_toStartOf="@+id/title_description"
        app:layout_constraintTop_toTopOf="@+id/title_description"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/title_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="49dp"
        android:text="Descrição"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/title_Price"
        app:layout_constraintEnd_toStartOf="@+id/title_Price"
        app:layout_constraintTop_toTopOf="@+id/title_Price" />

    <TextView
        android:id="@+id/title_Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="60dp"
        android:text="Preço"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Nome"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxWidth="150dp"
        android:maxLines="2"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/imagem_Produto"
        app:layout_constraintTop_toBottomOf="@+id/title_description"
        tools:text="Bolo Red Velvetaaaaaaaaaaaaaaa" />

    <TextView
        android:id="@+id/Preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="20dp"

        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/Nome"
        app:layout_constraintTop_toBottomOf="@+id/title_Price"

        android:maxWidth="90dp"
        android:maxLines="1"
        android:ellipsize="end"

        tools:text="$50,00" />

    <ImageButton
        android:id="@+id/btn_Lixo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="60dp"
        android:background="@color/color_Primary"
        android:contentDescription="Remove produto"
        android:src="@drawable/ic_trashcan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Preco" />

    <ImageButton
        android:id="@+id/imagem_Produto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_Primary"
        android:contentDescription="Imagem do produto"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_Itens"
        tools:src="@drawable/bolo" />

    <TextView
        android:id="@+id/quantidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:ellipsize="end"
        android:maxWidth="120dp"

        android:maxLines="1"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="@+id/Nome"

        app:layout_constraintTop_toBottomOf="@+id/Nome"
        tools:text="Quantidade:01" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="181dp" />

    <ImageButton
        android:id="@+id/btn_Add_qtd"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="44dp"
        android:backgroundTint="@color/color_Primary"
        android:padding="12dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_Lixo"
        app:layout_constraintTop_toBottomOf="@+id/quantidade"
        app:srcCompat="@drawable/ic_plus"
        android:contentDescription="Botão Mais"/>


</androidx.constraintlayout.widget.ConstraintLayout>