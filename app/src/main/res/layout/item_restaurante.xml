<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:background="?android:attr/selectableItemBackground"> <!-- Adiciona um feedback visual de clique -->

    <!-- A imagem do restaurante permanece a mesma -->
    <ImageView
        android:id="@+id/img_restaurant"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="Logotipo do Restaurante"
        android:scaleType="centerCrop"
        android:src="@drawable/sweetcake" />

    <!-- O container de texto permanece o mesmo -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Restaurante"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_restaurant_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Cozinha"
            android:textColor="#757575" />
    </LinearLayout>

    <!-- ÍCONE DE FAVORITO ADICIONADO AQUI -->
    <ImageButton
        android:id="@+id/iv_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Adicionar aos favoritos"
        android:padding="8dp"
        app:srcCompat="@drawable/ic_favorite_border" /> <!-- Ícone padrão -->

</LinearLayout>
